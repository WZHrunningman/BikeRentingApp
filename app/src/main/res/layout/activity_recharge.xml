<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RechargeActivity"
    android:background="@drawable/bg_recharge">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title" />

    <ImageView
        android:id="@+id/iv_one"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/bg_recharge_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_two"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/bg_recharge_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="132dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recharge" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="144dp"
        android:layout_marginTop="132dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recharge" />

    <ImageView
        android:id="@+id/iv_three"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="152dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/bg_recharge_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_four"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="152dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_recharge_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="244dp"
        android:layout_marginStart="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/recharge" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="244dp"
        android:layout_marginEnd="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/recharge" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="开始充值"
        android:textColor="#000"
        android:textSize="15sp"
        android:background="@drawable/bg_wallet_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="5元"
        app:layout_constraintBottom_toBottomOf="@+id/iv_one"
        app:layout_constraintEnd_toEndOf="@+id/iv_one"
        app:layout_constraintStart_toStartOf="@+id/iv_one"
        app:layout_constraintTop_toTopOf="@+id/iv_one"
        android:textSize="20sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="20元"
        app:layout_constraintBottom_toBottomOf="@+id/iv_two"
        app:layout_constraintEnd_toEndOf="@+id/iv_two"
        app:layout_constraintStart_toStartOf="@+id/iv_two"
        app:layout_constraintTop_toTopOf="@+id/iv_two"
        android:textSize="20sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="50元"
        app:layout_constraintBottom_toBottomOf="@+id/iv_three"
        app:layout_constraintEnd_toEndOf="@+id/iv_three"
        app:layout_constraintStart_toStartOf="@+id/iv_three"
        app:layout_constraintTop_toTopOf="@+id/iv_three"
        android:textSize="20sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="100元"
        app:layout_constraintBottom_toBottomOf="@+id/iv_four"
        app:layout_constraintEnd_toEndOf="@+id/iv_four"
        app:layout_constraintStart_toStartOf="@+id/iv_four"
        app:layout_constraintTop_toTopOf="@+id/iv_four"
        android:textSize="20sp"
        android:textColor="#000"/>
</android.support.constraint.ConstraintLayout>